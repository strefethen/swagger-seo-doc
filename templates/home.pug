extends swaggerbase

block headstyle
    style.
        .item-wrapper {
            float:left;
            width: 100%;
        }

        .item {
            width:200px;
            margin:4px;
            display: inline-block;
        }

block masthead
    <!-- Main jumbotron for a primary marketing message or call to action -->
    div(class="jumbotron")
        div(class="container")
            h1 #{swagger.info.title}
            p #{swagger.info.description}
           
            a(href=swagger.externalDocs.url) #{swagger.externalDocs.description}
            p
            a(href='swagger/index.html') # Swagger

    div(style='clear: both')                

block content
    h2 Servi√ßos
    div(class='item-wrapper')
        each item in Object.keys(objects)
            div(class='item')
                a(href=item + '/index.html') #{item}
    p &nbsp;
    hr
    h2 Entidades
    div(class='item-wrapper')
        each definition in Object.keys(swagger.definitions)
            div(class='item')
                a(href='definitions/' + definition + '.html') #{definition}
    
    p &nbsp;
    hr
    h2 Detalhes do Servidor
    div(class='item-wrapper')
        p Version: #{swagger.info.version}
        p Path: #{swagger.basePath} 
        p Scheme: #{swagger.schemes} 
        p Consume: #{swagger.consumes}
        p Produce: #{swagger.produces}
        p Contato: #{swagger.info.contact.name} #{swagger.info.contact.email}

    div(style='clear: both')